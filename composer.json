{
    "name": "opekunov/laravel-telegram-bot",
    "description": "Telegram Bot for Laravel",
    "version": "0.8",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Opekunov",
            "email": "iam@opekunov.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "Opekunov\\LaravelTelegramBot\\": "src/"
        }
    },
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "guzzlehttp/guzzle": "^7.4.3",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.20",
        "vlucas/phpdotenv": "^5.4"
    },
    "scripts": {
        "phpunit": "@php ./vendor/bin/phpunit -d memory_limit=512M"
    }
}
