{
  "name": "opekunov/laravel-telegram-bot",
  "description": "Telegram Bot for Laravel",
  "version": "0.8",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Opekunov",
      "email": "iam@opekunov.com"
    }
  ],
  "minimum-stability": "dev",
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "Opekunov\\LaravelTelegramBot\\": "src/"
    }
  },
  "require": {
    "php": "^8.0|^8.1",
    "ext-json": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.20",
    "guzzlehttp/guzzle": "^7.4",
    "orchestra/testbench": "7.*",
    "league/flysystem-aws-s3-v3": "^3.0",
    "vlucas/phpdotenv": "^5.4"
  },
  "suggest": {
    "league/flysystem-aws-s3-v3": "Required to use AWS S3 file storage"
  },
  "scripts": {
    "phpunit": "@php ./vendor/bin/phpunit -d memory_limit=512M"
  },
  "extra": {
    "providers": [
      "Opekunov\\LaravelTelegramBot\\LaravelTelegramBotServiceProvider"
    ]
  }
}
